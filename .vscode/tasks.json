{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "yarn",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install",
            "args": [
                "install"
            ]
        },
        {
            "taskName": "test",
            "args": [
                "run",
                "test"
            ]
        },
        {
            "taskName": "clean",
            "args": [
                "run",
                "clean"
            ]
        },
        {
            "taskName": "clean-node",
            "args": [
                "run",
                "clean-node"
            ]
        },
        {
            "taskName": "compile",
            "args": [
                "run",
                "compile"
            ],
            "isBuildCommand": true,
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "compile-watch",
            "args": [
                "run",
                "compile-watch"
            ],
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        }
    ]
}